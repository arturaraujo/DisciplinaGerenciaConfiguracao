<project name="GerenciaConfiguracao">
	<property name="source.dir" location="src"></property>
	<property name="build.dir" location="bin"></property>
	<property name="doc.dir" location="doc"></property>
	<property name="junit.dir" location="lib"></property>

	<junit printsummary="yes" haltonfailure="yes">
		<classpath id="master-classpath">
			<fileset dir="${junit.dir}">
				<include name="**/junit-4.13.1.jar" />
			</fileset>
		</classpath>
	</junit>
	
	<target name="clean">
		<delete dir="${build.dir}"></delete>
		<delete dir="${doc.dir}"></delete>
		<delete>
			<fileset defaultexcludes="no" dir="${source.dir}" includes="**/*~"/>
		</delete>
	</target>
	
	<target name="doc">
		<javadoc sourcepath="${source.dir}" destdir="${doc.dir}">
			<classpath refid="master-classpath"/>
		</javadoc>
	</target>
	
	<target name="init">
		<mkdir dir="${build.dir}"></mkdir>
		<mkdir dir="${doc.dir}"></mkdir>
	</target>
	
	<target name="compile">
		<javac srcdir="${source.dir}" destdir="${build.dir}" includeantruntime="false">
			<classpath refid="master-classpath"/>
		</javac>
	</target>
	
	<target name="main" depends="clean, init, compile, doc"></target>
</project>
